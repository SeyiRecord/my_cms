<% @page_title = "Show Song: #{@song.name}" %>

<%= link_to("<< Back to List", {:action => 'list', :page_id => @page.id}, :class => 'back-link') %>

<div class="song show">
  <h2>Show Song</h2>

  <table summary="Song detail view">
    <tr>
      <th>Page ID</th>
      <td><%= @song.page_id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @song.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @song.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @song.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @song.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @song.updated_at %></td>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @song.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td><%= @song.content %></td>
    </tr>
  </table>
  
</div>
