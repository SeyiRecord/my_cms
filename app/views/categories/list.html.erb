<% @song_title = "Categories List" %>

<%= link_to("<< Back to Menu", {:controller => 'access', :action => 'menu'}, :class => 'back-link') %>

<div class="category list">
  <h2>Categories</h2>
  
  <%= link_to("Add New Category", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@categories.size, 'category') %> found</div>
  
  <table class="listing" summary="Category list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Category</th>
      <th>Visible</th>
      <th>Songs</th>
      <th>Actions</th>
    </tr>
    <% @categories.each do |category| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= category.position %></td>
      <td><%= category.name %></td>
      <td class="center"><%= status_tag(category.visible) %></td>
      <td class="center"><%= category.songs.size %></td>
      <td class="actions">
        <%= link_to("View Songs", {:controller => 'songs', :action => 'list', :category_id => category.id}, :class => 'action show') %>
        <%= link_to("Show", {:action => 'show', :id => category.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => category.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => category.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
