<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>My CMS | <%= @page_title || 'Admin Area' %></title>
    <meta name="author" content="James Adeola">
    <%= stylesheet_link_tag('public', 'admin', 'style12', "application", :media => 'all') %>
    <%= javascript_include_tag('application') %>
  </head>
  <body>
    
    <div id="header">
      <h1>My CMS Admin</h1>
    </div>
    
    <div class="top">
      <div class="navbar"><%= link_to "Admin Page", admin_path  %></div>
      <div class="navbar"><%= link_to "Admin Users", admin_users_path  %></div>
      <div class="navbar"><%= link_to "Create category", new_category_path  %></div>
      <div class="navbar"><%= link_to "All categories", categories_path  %></div>
    </div>
<p><%#= link_to "Admin Login", login_path  %> </p>

    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <div id="content">
        <% flash.each do |k,v| %>
          <div class="alert alert-<%= k %>"><%= v %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Seyi J. Adeola</p>

    </div>
  </body>
</html>
