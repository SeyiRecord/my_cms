<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Music World <%= "| #{@page_title}" if @page_title %></title>
    <meta name="author" content="James Adeola">
    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag('public') %>
    <%= stylesheet_link_tag('application') %>
  </head>
  <body>
    <div id="header">
      <h1>My CMS</h1>
    </div>
    <div id="main">
      <div id="navigation">
        <%= link_to "Admin Login", 'access/login'  %>
        <%= link_to "All Songs", songs_path %>
        <div id='search_bar'>
          <%= render 'layouts/search'  %>
        </div>
      </div>
      <div id="content">
        <% flash.each do |k,v| %>
          <div class="alert alert-<%= k %>"><%= v %></div>
        <% end %>

        <%= yield %>
      </div>
      <div class="clear"></div>
    </div>
    <div id="footer">
      <p id="copyright">&copy;James Adeola</p>
    </div>
  </body>
</html>
